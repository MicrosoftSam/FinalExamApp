<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="lib/bootstrap/dist/**/*.min.css" />
    <title>FinalExamApp</title>
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark" role="navigation">
        <a class="navbar-brand" href="#">FinalExamApp</a>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("CategoryNav")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
    <div class="fixed-bottom bg-dark">
        <footer>
            <p style="color:white">@DateTime.Now.Year - FinalExamApp</p>
        </footer>
    </div>
</body>
</html>
