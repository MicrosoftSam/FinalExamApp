@model IEnumerable<string>

<a class="btn btn-block btn-secondary"
   asp-action="Index" asp-controller="Home">
    Home
</a>

@foreach (var cat in Model)
{
    <a class="btn btn-block
       @(cat == ViewBag.SelectedCategory ? "btn-primary" : "btn-secondary")"
       asp-action="Index" asp-controller="Course" asp-route-category="@cat"
       asp-route-coursePage="1">
        @cat
    </a>
}

<a class="btn btn-block btn-secondary"
   asp-action="ShowAllCourses" asp-controller="Course" asp-route-category="">
    Show All Courses
</a>
